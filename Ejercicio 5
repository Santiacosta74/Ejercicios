// 5.Ingresar dos lados de un triángulo rectángulo y calcular, la hipotenusa , el perímetro, la superficie e imprimir los resultados.
{
    float cat1, cat2, hip, per, sup;
    Console.WriteLine("Ingresar un cateto del triángulo rectángulo");
    cat1 = float.Parse(Console.ReadLine());
    Console.WriteLine("Ingresar otro cateto del triángulo rectángulo");
    cat2 = float.Parse(Console.ReadLine());
    hip = (float)Math.Sqrt(Math.Pow(cat1, 2) + Math.Pow(cat2, 2));
    Console.WriteLine("El valor de la hipotenusa es de " + hip);
    per = cat1 + cat2 + hip;
    Console.WriteLine("El valor del perímetro es de " + per);
    sup = cat1 * cat2 / 2;
    Console.WriteLine("El valor de la superficie es de " +  sup);
    
}
